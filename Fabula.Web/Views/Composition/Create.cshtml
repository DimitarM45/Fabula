@model CompositionCreateFormModel
@{
    ViewData["Title"] = "Write your own piece";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label class="form-label">Cover picture</label>
                <input type="file" class="form-control" name="picture" />
            </div>
            <div class="form-group" style="padding-top: 20px">
                <label class="form-label" asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Title of the piece..." />
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 20px">
                <label class="form-label" asp-for="Synopsys"></label>
                <input asp-for="Synopsys" class="form-control text" placeholder="Synopsys of the piece..." />
                <span asp-validation-for="Synopsys" class="small text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 20px">
                <label class="form-label" asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" placeholder="Write your story..." style="block-size: 200px"></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 20px">
                <input class="form-label" asp-for="HasAdultContent" class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label text-danger text-decoration-underline" asp-for="HasAdultContent">NSFW content</label>
            </div>
            <div class="justify-content-center">
                <input class="btn btn-primary mt-3" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>
