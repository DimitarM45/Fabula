﻿@using Fabula.Common.Messages.Enums;

@if (TempData.ContainsKey(NotificationType.ErrorMessage.ToString()))
{
    <script>
        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-top-center",
            "preventDuplicates": true
        }

        toastr.error('@TempData[NotificationType.ErrorMessage.ToString()]');
    </script>
}

