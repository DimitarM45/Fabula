@model CompositionFormModel

<div class="form-group" style="padding-top: 20px">
    <label class="form-label" asp-for="Title"></label>
    <input asp-for="Title" class="form-control" placeholder="Title of the piece..." />
    <span asp-validation-for="Title" class="small text-danger"></span>
</div>
<div class="form-group" style="padding-top: 20px">
    <label class="form-label" asp-for="Synopsis"></label>
    <textarea asp-for="Synopsis" class="form-control" placeholder="Synopsis of the piece..."></textarea>
    <span asp-validation-for="Synopsis" class="small text-danger"></span>
</div>
<div class="form-group" style="padding-top: 20px">
    <label class="form-label" asp-for="Content"></label>
    <textarea asp-for="Content" id="content-textarea" class="form-control" placeholder="Write your story..." style="block-size: 200px"></textarea>
    <span asp-validation-for="Content" class="small text-danger"></span>
</div>
<div class="form-group" style="padding-top: 20px">
    <label class="form-label" asp-for="GenresToSelect">Select genres:</label>
    <select asp-for="Genres" class="form-control" multiple="multiple">
        @foreach (var genre in Model.GenresToSelect.OrderBy(g => g.Name))
        {
            <option value="@genre.Id">@genre.Name</option>
        }
    </select>
</div>
<div class="form-group" style="padding-top: 20px">
    <label class="form-label" asp-for="CoverUrl"></label>
    <input asp-for="CoverUrl" class="form-control" placeholder="Url of the piece's cover art'" />
    <span asp-validation-for="CoverUrl" class="small text-danger"></span>
</div>
<div class="form-group" style="padding-top: 20px">
    @Html.CheckBoxFor(c => c.HasAdultContent)
    <label class="form-check-label text-danger text-decoration-underline" asp-for="HasAdultContent">NSFW content</label>
</div>